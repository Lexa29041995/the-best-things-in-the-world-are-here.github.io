
  <div class="wrapper">
        <header class="header">
            <div class="container">
                <div class="headerBody">
                    <div class="menuBurger">
                        <span></span>
                    </div>
                    <nav class="menu">
                      <ul class="parent menuList">
                        {% for link in linklists.main-menu.links %}
                        <li {% if link.active %}class="active {% if link.child_active %}child-active{% endif %} "{% endif %}>
                          <a href="{{ link.url  }}" class="menuFirstLevel">{{ link.title }}</a>
                        {% if link.links != blank %}
                          <span class="menuArrow arrow"></span>
                          <ul class="child menuListSecond">
                            {% for child_link in link.links %}  
                            <li {% if child_link.active %}class="active {% if child_link.child_active %}child-active{% endif %}"{% endif %}>
                              <a href= "{{ child_link.url }}" class="menuSecondLevel">{{ child_link.title }}</a>
                            {% if child_link.links != blank %}
                            <span class="menuSecondArrow arrow"></span>
                              <ul class="grandchild menuListThird">
                              {% for grandchild_link in child_link.links %}  
                                <li {% if grandchild_link.active %}class="active {% if grandchild_link.child_active %}child-active{% endif %}"{% endif %}>
                                  <a href= "{{ grandchild_link.url }}" class="menuThirdLevel">{{ grandchild_link.title }}</a></li>
                              {% endfor %}
                              </ul>
                            {% endif %}   
                            </li>
                            {% endfor %}
                          </ul> 
                        {% endif %} 
                        </li>
                        {% endfor %}
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
    </div>